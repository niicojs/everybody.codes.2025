{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch on input",
      "skipFiles": ["<node_internals>/**"],
      "program": "${file}",
      "runtimeArgs": ["--env-file", ".env"],
      "outputCapture": "std"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch on real",
      "skipFiles": ["<node_internals>/**"],
      "program": "${file}",
      "args": ["real"],
      "runtimeArgs": ["--env-file", ".env"],
      "outputCapture": "std"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "init",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/init.js",
      "args": ["--year", "2024", "--day", "1", "--part", "1"],
      "runtimeArgs": ["--env-file", ".env"],
      "outputCapture": "std"
    }
  ]
}
